generator client {
	provider = "prisma-client-js"
}

datasource db {
	provider = "postgresql"
	url      = env("DATABASE_URL")
}

/// Stores uploaded legal documents and related metadata.
model Document {
	id        String   @id @default(uuid())
	title     String
	content   String
	sourceUrl String?
	createdAt DateTime @default(now())
	updatedAt DateTime @updatedAt
}
